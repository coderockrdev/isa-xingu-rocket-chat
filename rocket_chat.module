use Drupal\Core\Routing\RouteMatchInterface;

/**
 * Implements hook_menu().
 * @see hook_menu()
 * @return mixed
 */
function rocket_chat_menu() {
  $items[(string) \Drupal::config('rocket_chat.settings')->get('path')] = array(
    'route_name' => 'path.content'
  );
  $items['admin/config/rocket_chat'] = array(
    'route_name' => 'rocket_chat.admin_settings'
  );
  return $items;
}

/** @noinspection PhpUnusedParameterInspection */

/**
 * Implements hook_help().
 * @param $route_name
 * @param RouteMatchInterface $route_match
 * @return string
 * @see hook_help()
 */
function rocket_chat_help($route_name, RouteMatchInterface $route_match) {
  	if($route_name === 'rocket_chat.admin_settings'){
  		$output = '<div class="admin admin_title title rocketchat">';
  		$output .= '<h4>' . t('Rocket.Chat configuration management.') . '</h4>';
  		$output .= '<div class="admin rocketchat">';
  		$output .= t('In this section, you have permission to change your <strong>livechat</strong> management system.');
  		$output .= t(' As for now, you\'re only permitted to configure your server address as well as the server port.');
      $output .= '<br>';
      $output .= t('If you\'re running a local server, Rocket.Chat use <strong>localhost:3000</strong>, else only (http/https) protocols and (80/443) ports are allowed.');
  		$output .= '<br><br>';
  		$output .= '<small><em>' . t('please <strong>note</strong> that this is the alpha version of the Rocket.Chat livechat module, more updates will be available.') . '</em></small>';
  		$output .= '</div></div>';
  		return $output;
  	}
  	return ""; //No help rendered so returning an empty tring.
  }

